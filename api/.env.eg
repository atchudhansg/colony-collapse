# MAROONED Training API Configuration

# Flask Settings
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=sqlite:///data/episodes.db
DATABASE_PATH=data/episodes.db

# File Storage
EPISODES_DIR=data/episodes
ENABLE_FILE_STORAGE=True

# API Settings
API_HOST=0.0.0.0
API_PORT=5000
API_LOG_LEVEL=INFO

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://vercel-domain.com

# WebSocket Settings
SOCKETIO_LOG_LEVEL=INFO
SOCKETIO_ASYNC_MODE=threading

# Logging
LOG_FILE=logs/api.log
LOG_LEVEL=DEBUG
